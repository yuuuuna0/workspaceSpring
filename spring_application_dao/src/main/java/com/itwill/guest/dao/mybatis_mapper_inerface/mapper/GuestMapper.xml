<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.itwill.guest.dao.mybatis_mapper_inerface.mapper.GuestMapper">
	<select id="selectAll"
		resultType="com.itwill.guest.dao.mybatis_mapper_inerface.Guest">
		select * from guest
	</select>

	<select id="selectByNo" parameterType="int"
		resultType="com.itwill.guest.dao.mybatis_mapper_inerface.Guest">
		select *
		from guest where guest_no=#{guesNo}
	</select>
	<!-- 
	<insert id="insertGuest"
